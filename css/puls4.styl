gris_oscuro = #444
azul = #22bce0
naranja = #DD4F24
body
	background #e8e8e8e8 
	color gris_oscuro  
	font-family arial
	font-size 16px  

header
	background gris_oscuro 
	color white
	overflow hidden
	padding 0.5em
	position relative
	//A B C D E F G H I J K L M N Ñ O P Q R S T U V W X Y Z
	.logo
		border-right 1px solid azul	
		width 60px
		float left	
		
		img
			width 52px
	
	.titular
		 margin 0 80px 0 70px
	
		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold		 
			text-decoration none
		 	
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -7px 0 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 2px 2px 0px black

		.titulo
			font-size 18px
			font-weight normal
			margin 10px
			padding 10px 
	
	.usuario
		 position absolute
		 top 0
		 right 0
		.avatar
			margin 0.5em 2em 0 0
			position relative
			z-index 2 
			img
				width 50px
				border-radius 50%	
		
		.flechita
			background naranja
			color white 
			display block
			padding 3px
			top 25px
			right 10px	 
			text-align right
			position absolute
			width 2em 
//A B C D E F G H I J K L M N Ñ O P Q R S T U V W X Y Z    
nav
	background azul
	
	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		padding 0
		white-space nowrap
		li
			display inline-block
			
			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
		
			
	
 	 	
	