gris_oscuro = #444
azul = #22bce0
naranja = #DD4F24
body
	background #e8e8e8e8 
	color gris_oscuro  
	font-family arial
	font-size 16px  

header
	background gris_oscuro 
	color white
	padding 0.5em
	position relative
	
	.logo
		border-right 1px solid azul	
		width 60px
		float left	
		
		img
			width 52px
	
	.titular
		 margin 0 80px 0 70px
		 
		.titulo
			font-size 18px
			font-weight normal
			margin 10px
			padding 10px 
	
	.usuario
		 position absolute
		 top 0
		 right 0
		.avatar
			img
				width 50px
				border-radius 50%	
		
		.flechita
			background naranja
			color white 
			display block
			top 0px	 
			text-align right
			position absolute
			width 2em 
    
